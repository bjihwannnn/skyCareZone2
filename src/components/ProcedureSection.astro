---
const { title, steps = [] } = Astro.props;
---

<section class="mt-16 sm:mt-20 animate-fade-up">
  <h3 class="section-title">{title}</h3>
  <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 sm:gap-8">
    {steps.map((s, i) => (
      <div key={i} class="bg-white p-6 sm:p-8 rounded-2xl shadow-md hover:shadow-xl transition-all">
        <h4 class="font-semibold text-lg text-skycare-blue mb-3">{s.title}</h4>
        <p class="text-gray-700 leading-relaxed text-sm sm:text-base">{s.desc}</p>
      </div>
    ))}
  </div>
</section>

