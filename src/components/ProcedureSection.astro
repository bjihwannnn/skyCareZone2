---
const { title, steps = [] } = Astro.props;
---

<section
  id="procedure"
  class="animate-fade-up full-screen-section"
>
  <div class="max-w-6xl mx-auto">
    <h3 class="section-title mb-10">{title}</h3>

    <div class="space-y-10 sm:space-y-12">
      {steps.map((s, i) => (
        <div key={i} class="relative pl-6 border-l-2 border-skycare-blue/30">
          <!-- 단계 번호 -->
          <div class="absolute -left-3 top-0 w-6 h-6 flex items-center justify-center rounded-full bg-skycare-blue text-white text-xs font-semibold">
            {i + 1}
          </div>

          <!-- 내용 -->
          <h4 class="font-semibold text-lg text-skycare-darkblue mb-2">
            {s.title.replace(/^\d+️⃣?\s*/, "")}
          </h4>
          <p class="text-gray-700 leading-relaxed text-sm sm:text-base">
            {s.desc}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
