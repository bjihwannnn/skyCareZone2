---
const { title, steps } = Astro.props;
---

<section class="mt-24">
  <h3 class="text-3xl font-bold text-skycare-darkblue mb-8">{title}</h3>

  <div class="grid md:grid-cols-2 gap-8">
    {steps.map(step, i) => (
      <div key={i} class="bg-white p-8 rounded-2xl shadow-md hover:shadow-xl transition-all">
        <h4 class="font-semibold text-lg text-skycare-blue mb-4">{step.title}</h4>
        <p class="text-gray-700 leading-relaxed">{step.desc}</p>
      </div>
    ))}
  </div>
</section>
