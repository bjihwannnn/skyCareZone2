---
const { title, desc, btnText, phone } = Astro.props;
---

<section
  id="contact"
  class="text-center relative animate-fade-up full-screen-section"
>
  <div 
    id="inner"
    class="max-w-3xl mx-auto"
  >
    <!-- 타이틀 -->
    <h3 class="text-4xl font-extrabold tracking-tight mb-5 text-skycare-darkblue break-keep">
      {title}
    </h3>

    <!-- 설명 -->
    <p class="text-gray-700 text-lg leading-relaxed mb-10 break-keep">
      {desc}
    </p>

    <!-- CTA 버튼 -->
    <a
      href={`tel:${phone ?? "010-3201-0019"}`}
      class="inline-flex items-center justify-center px-10 py-4 rounded-lg font-semibold text-white bg-skycare-orange hover:bg-skycare-blue transition-transform duration-300 hover:scale-[1.03]"
    >
      {btnText || "전화 문의"}
    </a>
  </div>
</section>
