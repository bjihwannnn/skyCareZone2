---
const {
  title,
  subtitle,
  bgImage = "/assets/main.jpg",
  tallImage = "/assets/mmain.jpg"
} = Astro.props;
---

<section
  id="hero"
  class="relative full-screen-section"
>
  <!-- 기본 이미지 -->
  <div
    id="hero-bg"
    class="absolute inset-0 bg-cover bg-center"
    style={`background-image: url('${bgImage}')`}
  ></div>

  <div class="absolute inset-0"></div>

  <!-- 텍스트 콘텐츠 -->
  <div class="relative z-10 w-full h-full">
    <!-- 본 문구 (왼쪽 위) -->
    <h1
      class="absolute text-white font-extrabold drop-shadow-md leading-tight
             text-[1.8rem] md:text-7xl
             top-[5%] left-[5%]
             max-w-[75%] sm:max-w-[55%] md:max-w-[50%]
             text-left"
    >
      {title}
    </h1>

    <!-- 보조 문구 (오른쪽 아래) -->
    <p
      class="absolute text-white/90 font-medium leading-relaxed
             text-[1rem] md:text-3xl
             bottom-[5%] right-[5%]
             max-w-[70%] sm:max-w-[45%] md:max-w-[40%]
             text-right"
    >
      {subtitle}
    </p>
  </div>
</section>
