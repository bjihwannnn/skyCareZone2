---
const { title = "작업사진", photos = [] } = Astro.props;
---

<section
  id="gallery"
  class="animate-fade-up gallery bg-white"
>
  <div 
    id="inner-gallery"
    class="max-w-6xl mx-auto"
  >
    <!-- 제목 -->
    <h3 class="section-title text-center mb-8">{title}</h3>

    <!-- 이미지 그리드 -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 sm:gap-6">
      {photos.map((p, i) => (
        <figure key={i} class="overflow-hidden rounded-xl border border-gray-100 bg-white/40">
          <img
            src={p.src}
            alt={p.alt}
            class="w-full h-full object-cover transition-all duration-300 hover:brightness-105"
            loading="lazy"
          />
        </figure>
      ))}
    </div>
  </div>
</section>
