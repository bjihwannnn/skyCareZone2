---
const { title = "작업사진", photos = [] } = Astro.props;
---

<section class="mt-16 sm:mt-20 animate-fade-up">
  <h3 class="section-title text-center mb-6">{title}</h3>
  <div class="grid grid-cols-1 gap-4 sm:gap-6 place-items-center">
    {photos.map((p, i) => (
      <img
        key={i}
        src={p.src}
        alt={p.alt}
        class="rounded-2xl shadow-md hover:shadow-xl transition-all w-full sm:w-3/4 md:w-1/2 max-w-2xl object-cover"
        loading="lazy"
      />
    ))}
  </div>
</section>

