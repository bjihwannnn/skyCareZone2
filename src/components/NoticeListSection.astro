---
const { title = "유의사항", items = [] } = Astro.props;
---

<section class="mt-16 sm:mt-20 bg-skycare-light/60 rounded-2xl p-6 sm:p-8 md:p-10 animate-fade-up">
  <h3 class="section-title text-2xl sm:text-3xl mb-4">{title}</h3>
  <ul class="list-disc list-inside text-gray-700 space-y-2 text-sm sm:text-base leading-relaxed">
    {items.map((item, i) => <li key={i}>{item}</li>)}
  </ul>
</section>

