---
const { title = "유의사항", items = [] } = Astro.props;
---

<section
  id="notice"
  class="animate-fade-up full-screen-section"
>
  <div 
    id="inner"
    class="max-w-6xl mx-auto"
  >
    <!-- 제목 -->
    <h3 class="section-title mb-6">{title}</h3>

    <!-- 구분선 -->
    <div class="border-t border-gray-200 pt-6">
      <ul class="space-y-3 text-gray-700 font-bold text-lg leading-relaxed break-keep">
        {items.map((item, i) => (
          <li key={i} class="flex items-start gap-2">
            <span class="text-skycare-blue text-lg mt-[2px] mb-[2px]">></span>
            <span class="mt-[2px] mb-[2px]">{item}</span>
          </li>
        ))}
      </ul>
    </div>
  </div>
</section>
