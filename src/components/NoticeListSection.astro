---
const { title = "유의사항", items } = Astro.props;
---

<section class="mt-24 bg-skycare-light/60 rounded-2xl p-10">
  <h3 class="text-2xl font-bold text-skycare-darkblue mb-4">{title}</h3>
  <ul class="list-disc list-inside text-gray-700 space-y-2 leading-relaxed">
    {items.map((item, i) => <li key={i}>{item}</li>)}
  </ul>
</section>
