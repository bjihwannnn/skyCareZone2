---
import BaseLayout from "../layouts/BaseLayout.astro";
import HeroSection from "../components/HeroSection.astro";
import ProcedureSection from "../components/ProcedureSection.astro";
import NoticeList from "../components/NoticeListSection.astro";
import PhotoGallery from "../components/GallerySection.astro";
import CTASection from "../components/CTASection.astro";
---

<BaseLayout>
  <HeroSection
    title="에어컨 청소"
    subtitle="13년 이상 축적된 노하우로, 에어컨의 성능과 위생을 동시에 책임집니다."
    bgImage="/assets/ac/ac_0.jpg"
    btnText="예약 문의"
  />

  <ProcedureSection
    title="에어컨 종합세척 절차"
    steps={[
      { title: "1️⃣ 분해 및 커버 제거", desc: "외부 커버 및 필터를 완전히 분리하고, 세척 전 전원 차단을 철저히 합니다." },
      { title: "2️⃣ 열교환기 세척", desc: "고압 세척기와 전용 약품으로 내부 열교환기 오염을 제거합니다. 물받이판까지 완전 분해해 곰팡이 및 슬러지 누적을 방지합니다." },
      { title: "3️⃣ 송풍팬 및 드레인 세척", desc: "팬 날개와 드레인 라인을 세척하여 냄새 원인균을 근본적으로 제거합니다." },
      { title: "4️⃣ 조립 및 테스트", desc: "완전 건조 후 재조립 및 냉방 테스트로 정상 작동 확인까지 완료합니다." },
    ]}
  />

  <NoticeList
    items={[
      "주차공간이 반드시 확보되어야 하며, 주차비 발생 시 실비 청구됩니다.",
      "특정 브랜드(빌트인·천장형 등)는 추가비용이 발생할 수 있습니다.",
      "2대 이상 청소 시 추가 할인 적용됩니다.",
    ]}
  />

  <PhotoGallery
    photos={[
      { src: "/assets/ac/ac_1.jpg", alt: "에어컨 작업사진 1" },
      { src: "/assets/ac/ac_2.jpg", alt: "에어컨 작업사진 2" },
      { src: "/assets/ac/ac_3.jpg", alt: "에어컨 작업사진 3" },
    ]}
  />

  <CTASection
    title="에어컨 세척 예약"
    desc="주택, 사무실, 매장 모두 전문 세척 가능합니다. 지금 바로 상담해 보세요."
  />
</BaseLayout>
