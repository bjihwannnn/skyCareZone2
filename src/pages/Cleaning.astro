---
import BaseLayout from "../layouts/BaseLayout.astro";
import HeroSection from "../components/HeroSection.astro";
import ProcedureSection from "../components/ProcedureSection.astro";
import NoticeListSection from "../components/NoticeListSection.astro";
import GallerySection from "../components/GallerySection.astro";
import CTASection from "../components/CTASection.astro";
---

<BaseLayout>
  <HeroSection
    title="클리닝 서비스"
    subtitle="가구와 바닥, 공간의 청결을 책임지는 건·습식 클리닝 전문 서비스입니다."
    bgImage="/assets/main.jpg"
  />

  <ProcedureSection
    title="습식 클리닝 절차"
    steps={[
      { title: "오염 확인 및 분류", desc: "오염의 정도, 소재, 마감 상태를 점검하고 적합한 세정 방법을 선정합니다." },
      { title: "전처리 및 습식 세정", desc: "친환경 약제를 분사 후, 고온 스팀 및 진공 흡입으로 미세먼지·세균을 제거합니다." },
      { title: "건조 및 마감 관리", desc: "습기와 잔여 세제를 제거한 뒤, 소재에 맞춘 보호 코팅 및 항균 처리를 실시합니다." },
      { title: "검수 및 고객 확인", desc: "클리닝 결과를 함께 확인하고, 추가 요청 사항을 바로 반영합니다." },
    ]}
  />

  <NoticeListSection
    items={[
      "오래된 자국은 완전 제거가 어려울 수 있습니다.",
      "스팀 살균청소는 추가 1만원으로 가능합니다.",
      "습식 선택 시, 건식 클리닝은 무료로 함께 진행됩니다.",
      "소재별(가죽, 대리석 등) 별도 관리가 필요할 수 있습니다.",
    ]}
  />

  <GallerySection
    photos={[
      { src: "/assets/c/c_1.jpg", alt: "클리닝 작업사진 1" },
      { src: "/assets/c/c_2.jpg", alt: "클리닝 작업사진 2" },
      { src: "/assets/c/c_3.jpg", alt: "클리닝 작업사진 3" },
    ]}
  />

  <CTASection
    title="클리닝 서비스 예약"
    desc="가정, 사무실, 매장 등 어떤 공간도 맞춤형 클리닝 서비스를 제공합니다."
  />
</BaseLayout>
